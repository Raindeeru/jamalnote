<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="405.0" prefWidth="721.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guoxquiboloy.le3.EditorController">
    <children>
      <HBox prefHeight="12.0" prefWidth="408.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField alignment="CENTER" prefHeight="25.0" prefWidth="63.0" text="Font " />
                  <MenuButton fx:id="fontButton" mnemonicParsing="false" onAction="#fontChange" prefHeight="25.0" prefWidth="118.0" text="MenuButton" textAlignment="CENTER">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Arial" />
                      <MenuItem mnemonicParsing="false" text="Calibri" />
                        <MenuItem mnemonicParsing="false" text="Times New Roman" />
                        <MenuItem mnemonicParsing="false" text="Verdana" />
                        <MenuItem mnemonicParsing="false" text="Courier New" />
                    </items>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </MenuButton>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField alignment="CENTER" prefHeight="25.0" prefWidth="65.0" text="Font Size " />
                  <Button fx:id="fontSizePlusButton" mnemonicParsing="false" onAction="#fontSizePlus" prefHeight="25.0" prefWidth="25.0" text="+" />
                  <Button fx:id="fontSizeMinButton" mnemonicParsing="false" onAction="#fontSizeMin" prefHeight="25.0" prefWidth="25.0" text="-" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField text="Font Color" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="colorButtonOne" mnemonicParsing="false" onAction="#colorOne" prefHeight="25.0" prefWidth="25.0" style="-fx-background-color: #FFC0CB;" />
                        <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" style="-fx-background-color: #C3B1E1;" />
                        <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" style="-fx-background-color: #F89880;" />
                        <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" style="-fx-background-color: #ADD8E6;" />
                        <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" style="-fx-background-color: #000000;" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </HBox>
      <Button fx:id="saveButton" mnemonicParsing="false" onAction="#Save" text="Save" />
      <TextArea fx:id="typeArea" prefHeight="200.0" prefWidth="200.0" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
