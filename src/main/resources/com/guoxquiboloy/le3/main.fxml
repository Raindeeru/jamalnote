<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guoxquiboloy.le3.MainController">
   <children>
      <HBox layoutY="0.800000011920929" prefHeight="500.0" prefWidth="680.0">
         <children>
            <VBox prefHeight="100.0" prefWidth="339.0">
               <children>
                  <Label text="Recent Files">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <ScrollPane hbarPolicy="NEVER" prefHeight="500.0" prefWidth="200.0">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="500.0" prefWidth="340.0">
                           <children>
                              <VBox fx:id="recentFilesBar" prefHeight="482.0" prefWidth="340.0">
                                 <children>
                                    <Button fx:id="recentFileButton" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="75.0" prefWidth="340.0" text="sample.txt" />
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                    </content>
                  </ScrollPane>
               </children>
            </VBox>
            <VBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="147.0" prefWidth="340.0">
               <children>
                  <Button fx:id="loadButton" mnemonicParsing="false" onAction="#LoadFile" prefWidth="200.0" text="Load File" />
                  <Button fx:id="closeButton" onAction="#Close" prefWidth="200.0" text="Close" />
                  <Button fx:id="newFileButton" mnemonicParsing="false" onAction="#OpenNewFile" prefWidth="200.0" text="New File" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
